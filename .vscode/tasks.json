{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run MPI Script",
			"type": "shell",
			"command": "${workspaceFolder}/mpi/run.sh",
			"args": ["${file}", "${input:npProcesses}", "${input:programArgs}"],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Run OpenMP Script",
			"type": "shell",
			"command": "${workspaceFolder}/openmp/run.sh",
			"args": ["${file}", "${input:programArgs}"],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	],
	"inputs": [
		{
			"id": "npProcesses",
			"type": "pickString",
			"description": "NÃºmero de processos",
			"options": ["1", "2", "3", "4", "5", "6", "7", "8"]
		},
		{
			"id": "programArgs",
			"type": "promptString",
			"description": "Argumentos para o programa MPI",
			"default": ""
		}
	]
}
